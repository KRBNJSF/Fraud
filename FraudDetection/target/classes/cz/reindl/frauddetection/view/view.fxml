<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.reindl.frauddetection.controller.Controller">
    <VBox>
        <LineChart fx:id="lineChart">
            <xAxis>
                <NumberAxis side="BOTTOM" fx:id="xAxis"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" side="LEFT"/>
            </yAxis>
        </LineChart>
        <Button fx:id="analyzeButton" alignment="CENTER" maxHeight="1.7976931348623157E308"
                maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                onAction="#analyzeData" text="Analyze">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <effect>
                <InnerShadow/>
            </effect>
        </Button>
        <Button fx:id="generateButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                mnemonicParsing="false" onAction="#generateData" text="Generate Random Data">
            <effect>
                <InnerShadow/>
            </effect>
        </Button>
    </VBox>
</AnchorPane>
